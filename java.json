#profile-photo {
  width: 50px; /* Adjust the width as needed */
  height: auto;
  border-radius: 50%; /* To make it circular */
  transition: transform 0.3s ease;
}

#profile-photo:hover {
  transform: scale(1.1); /* Increase size by 10% on hover */
}

.game-img {
  width: 30px; /* Adjust the width as needed */
  height: auto;
  border-radius: 5px;
  transition: transform 0.3s ease;
}

.game-img:hover {
  transform: scale(1.1); /* Increase size by 10% on hover */
}
